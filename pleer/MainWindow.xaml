<Window x:Class="pleer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pleer"
        mc:Ignorable="d"
        Height="600" Width="1050"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="75"/>
            <RowDefinition/>
            <RowDefinition Height="75"/>
        </Grid.RowDefinitions>

        <!-- Main Panel -->
        <Grid>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <Button HorizontalAlignment="Right" VerticalAlignment="Top"
                    Content="Войти" Click="LoginButton_Click" Margin="10 0"
                    Style="{StaticResource SimpleSubmitButton}"/>

                <Button HorizontalAlignment="Right" VerticalAlignment="Top"
                    Content="Добавить песню" Click="UploadSongButton_Click"
                    Style="{StaticResource SimpleSubmitButton}"/>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="1">
            <ScrollViewer VerticalAlignment="Top" 
                            Margin="150 0" VerticalScrollBarVisibility="Auto">
                    <StackPanel Name="MediaList"/>
            </ScrollViewer>
        </Grid>

        <Grid VerticalAlignment="Bottom" Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <!-- Song Info -->
            <StackPanel Orientation="Horizontal" Margin="15 10"
                        VerticalAlignment="Center" HorizontalAlignment="Left">
                <Image Name="AlbumCover" />

                <StackPanel Margin="5">
                    <TextBlock Name="SongName" Style="{StaticResource SongName}"/>
                    <TextBlock Name="SingerName" Style="{StaticResource SingerName}"/>
                </StackPanel>
            </StackPanel>

            <!-- Song Main Functions -->
            <Grid Grid.Column="1" HorizontalAlignment="Stretch">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center"
                Orientation="Horizontal" Grid.Row="0">
                    <Button Content="⏮" Height="30" Width="30"
                            Click="PreviousMedia_Click" Name="PreviousMediaButton" Style="{StaticResource SimpleSubmitButton}"/>
                    
                    <Button Content="▶" Height="30" Width="30"
                            Click="PlayMedia_Click" Name="PlayMediaButton" Style="{StaticResource SimpleSubmitButton}"/>

                    <Button Content="⏭" Height="30" Width="30"
                            Click="NextMedia_Click" Name="NextMediaButton" Style="{StaticResource SimpleSubmitButton}"/>
                </StackPanel>

                <Grid VerticalAlignment="Center" Grid.Row="1" Margin="0,5,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Name="currentMediaTime" Style="{StaticResource SmallInfoPanel}" 
                               Grid.Column="0" VerticalAlignment="Center" Text="--:--"/>

                    <Slider x:Name="progressSlider" VerticalAlignment="Center"
                            Minimum="0" Margin="10,0"
                            Maximum="{Binding Duration.TotalSeconds}"
                            Value="{Binding CurrentPosition.TotalSeconds, Mode=OneWay}"
                            ValueChanged="ProgressSlider_ValueChanged"
                            PreviewMouseLeftButtonDown="ProgressSlider_PreviewMouseLeftButtonDown"
                            PreviewMouseLeftButtonUp="ProgressSlider_PreviewMouseLeftButtonUp"
                            Grid.Column="1"/>

                    <TextBlock Name="totalMediaTime" Style="{StaticResource SmallInfoPanel}" 
                               Grid.Column="2" VerticalAlignment="Center" Text="--:--"/>
                </Grid>
            </Grid>
            <!-- Song Operations -->
            <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="15 10"
                        VerticalAlignment="Center" HorizontalAlignment="Right">
                <TextBlock Style="{StaticResource SmallMainInfoPanel}" Text="🔉"/>

                <Slider x:Name="VolumeSlider"
                    Minimum="0" Maximum="0.1"
                    Value="0.05"
                    ValueChanged="VolumeSlider_ValueChanged"
                    Width="100"
                    VerticalAlignment="Center"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
