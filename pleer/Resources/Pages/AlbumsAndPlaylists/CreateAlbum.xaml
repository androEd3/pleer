<Page x:Class="pleer.Resources.Pages.AlbumsAndPlaylists.CreateAlbum"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:pleer.Resources.Pages.AlbumsAndPlaylists"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition MinWidth="325" Width="0.8*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0"
                Padding="5"
                Margin="5 0 0 0"
                Style="{StaticResource NonFunctionalField22}">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Text="Метаданные альбома"
                           Margin="5 5 5 10"
                           Style="{StaticResource BigMainInfoPanel}"/>

                <ScrollViewer Grid.Row="1"
                              VerticalScrollBarVisibility="Auto"
                              Style="{StaticResource DarkScrollViewer}">
                    <StackPanel Margin="5 5 5 0">
                        <TextBlock Text="Название альбома:"
                                   Style="{StaticResource SmallMainInfoPanel}"/>
                        <TextBox Name="AlbumTitle"
                                 Margin="5 0 5 5"
                                 Style="{StaticResource MainIngutField}"/>

                        <TextBlock Text="Обложка альбома:"
                                   Style="{StaticResource SmallMainInfoPanel}"/>

                        <Grid Margin="0 10 0 25"
                              HorizontalAlignment="Center"
                              Name="AlbumCoverGrid">
                            <Grid.Clip>
                                <RectangleGeometry Rect="0 0 300 300"
                                                   RadiusX="5" RadiusY="5"/>
                            </Grid.Clip>

                            <Image Width="300"
                                   RenderOptions.BitmapScalingMode="HighQuality"
                                   SnapsToDevicePixels="False"
                                   Name="AlbumCoverDemonstrate"
                                   Source="/Resources/ServiceImages/DefaultCover.png"/>

                            <Grid Visibility="Collapsed"
                                  Name="ChangeAlbumCoverGrid"
                                  MouseDown="ChangeAlbumCoverGrid_Click">
                                <Rectangle Opacity="0.8">
                                    <Rectangle.Fill>
                                        <SolidColorBrush Color="Black"/>
                                    </Rectangle.Fill>
                                </Rectangle>
                                <materialDesign:PackIcon Kind="Edit"
                                                         HorizontalAlignment="Center"
                                                         VerticalAlignment="Center"
                                                         Foreground="#eee"
                                                         Width="300" Height="300"/>
                            </Grid>
                        </Grid>
                    </StackPanel>
                </ScrollViewer>

                <StackPanel Grid.Row="2" Margin="10" >
                    <TextBlock Name="ErrorNoticePanel" Margin="0 0 0 15"
                               HorizontalAlignment="Center"
                               Style="{StaticResource SmallErrorPanel}"/>

                    <Button HorizontalAlignment="Left" 
                            Content="Выпустить альбом" Click="ReleaseNewAlbumButton_Click"
                            Style="{StaticResource SimpleButton}"/>
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Column="1" Margin="5 0 5 0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0"
                    Padding="10"
                    Style="{StaticResource NonFunctionalField22}">
                <TextBlock TextWrapping="Wrap"
                           Text="Добавление песен в альбом"
                           Style="{StaticResource BigMainInfoPanel}"/>
            </Border>

            <ScrollViewer Grid.Row="1"
                          Margin="0 10 0 0"
                          VerticalScrollBarVisibility="Auto"
                          Style="{StaticResource DarkScrollViewer}">
                <StackPanel Name="SongsList"/>
            </ScrollViewer>
        </Grid>
    </Grid>
</Page>
