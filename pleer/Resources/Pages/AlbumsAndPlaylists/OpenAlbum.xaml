<Page x:Class="pleer.Resources.Pages.AlbumsAndPlaylists.OpenAlbum"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:pleer.Resources.Pages.AlbumsAndPlaylists"
      mc:Ignorable="d" >

    <Grid>
        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center"
                   Text="Выберите альбом" Name="InformationTextBlock" 
                   Visibility="Collapsed"
                   Style="{StaticResource SmallMainInfoPanel}"/>

        <StackPanel Name="AlbumContent">
            <Border Style="{StaticResource NonFunctionalField22}"
                    Margin="5 0 5 5" Padding="5">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <Grid>
                        <Grid.Clip>
                            <RectangleGeometry RadiusX="5" RadiusY="5"
                                               Rect="0 0 100 100">
                            </RectangleGeometry>
                        </Grid.Clip>

                        <Image Width="100"
                               Name="AlbumCoverCenterField"
                               Source="/Resources/ServiceImages/DefaultCover.png"/>
                    </Grid>

                    <StackPanel Margin="5" VerticalAlignment="Bottom">
                        <TextBlock Name="AlbumName" Style="{StaticResource AlbumNameCenterPanel}"/>
                        <TextBlock Name="ArtistName" Style="{StaticResource ArtistNameCenterPanel}"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <ScrollViewer Style="{StaticResource DarkScrollViewer}">
                <StackPanel Name="SongsList"/>
            </ScrollViewer>

            <StackPanel Margin="5 15">
                <TextBlock Style="{StaticResource SmallInfoPanel}">
                    <Run Name="TracksCount"/>
                    <Run Name="SummaryDuration"/>
                </TextBlock>
                <TextBlock Name="CreatonDate"
                           Style="{StaticResource SmallInfoPanel}"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
