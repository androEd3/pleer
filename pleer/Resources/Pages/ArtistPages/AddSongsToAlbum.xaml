<Page x:Class="pleer.Resources.Pages.ArtistPages.AddSongsToAlbum"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:pleer.Resources.Pages.ArtistPages"
      mc:Ignorable="d" Background="White">

    <StackPanel Margin="5">
        <TextBlock Text="Добавление песен в альбом" Style="{StaticResource BigMainInfoPanel}"/>

        <StackPanel VerticalAlignment="Center" Margin="0 15">
            <TextBlock Text="Название песни:" Style="{StaticResource SmallMainInfoPanel}"/>
            <TextBox Name="SongTitle" Margin="0 0 0 5" Style="{StaticResource MainIngutField}"/>
        </StackPanel>
        
        <TextBlock Text="Список песен (0):" Style="{StaticResource SmallMainInfoPanel}"/>
        <StackPanel Margin="0 5 0 0">
            <ScrollViewer>
                <StackPanel Name="songList"/>
            </ScrollViewer>
        </StackPanel>

        <Button Content="Выбрать файл" Click="SelectSongFileButton_Click"
                HorizontalAlignment="Left" Margin="15 5"
                Style="{StaticResource SimpleSubmitButton}"/>
        
        <Grid Margin="5 20 5 0" VerticalAlignment="Bottom">
            <Button Content="Назад" Click="ReturnToAlbumButton_Click"
                    HorizontalAlignment="Left"
                    Style="{StaticResource SimpleSubmitButton}"/>

            <Button Content="Выпустить альбом" Click="UploadAlbumButton_Click"
                    HorizontalAlignment="Right"
                    Style="{StaticResource SimpleSubmitButton}"/>
        </Grid>
    </StackPanel>
</Page>
