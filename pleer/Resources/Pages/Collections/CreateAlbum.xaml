<Page x:Class="pleer.Resources.Pages.Collections.CreateAlbum"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:pleer.Resources.Pages.Collections"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition MinWidth="325" Width="0.8*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0"
                Padding="5"
                Margin="5 0 0 0"
                Style="{StaticResource NonFunctionalField22}">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Text="Метаданные альбома"
                           Margin="5 5 5 10"
                           Style="{StaticResource MainInfoPanel}"/>

                <ScrollViewer Grid.Row="1"
                              VerticalScrollBarVisibility="Auto"
                              Style="{StaticResource ScrollViewer}">
                    <StackPanel Margin="5 5 5 0">
                        <TextBlock Text="Название альбома:"
                                   Style="{StaticResource SmallMainInfoPanel}"/>
                        <TextBox Name="AlbumTitle"
                                 Margin="5 0 5 15"
                                 Style="{StaticResource MainIngutField}"/>

                        <TextBlock Text="Обложка альбома:"
                                   Style="{StaticResource SmallMainInfoPanel}"/>


                        <Grid Name="AlbumCoverGrid" Margin="0 10"
                              Width="200" Height="200">
                            <Border CornerRadius="5">
                                <Border.Background>
                                    <ImageBrush x:Name="AlbumCoverDemonstrate"
                                                ImageSource="/Resources/ServiceImages/DefaultCover.png"
                                                Stretch="UniformToFill"/>
                                </Border.Background>
                            </Border>

                            <Border Visibility="Collapsed" CornerRadius="5"
                                    Name="ChangeAlbumCoverGrid"
                                    MouseLeftButtonDown="ChangeAlbumCoverGrid_Click"
                                    Background="#CC000000" Cursor="Hand">
                                <materialDesign:PackIcon Kind="ImageEditOutline" Foreground="#eee"
                                 VerticalAlignment="Center" HorizontalAlignment="Center"
                                 Width="75" Height="75"/>
                            </Border>
                        </Grid>
                    </StackPanel>
                </ScrollViewer>

                <StackPanel Grid.Row="2" Margin="10 5" >
                    <TextBlock Name="ErrorNoticePanel" Margin="0 0 0 15"
                               HorizontalAlignment="Center"
                               Style="{StaticResource SmallErrorPanel}"/>

                    <Button HorizontalAlignment="Left" Padding="10"
                            Content="Выпустить альбом" Click="ReleaseNewAlbumButton_Click"
                            Style="{StaticResource SimpleButton}"/>
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Column="1" Margin="5 0 5 0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0"
                    Padding="10"
                    Style="{StaticResource NonFunctionalField22}">
                <TextBlock TextWrapping="Wrap"
                           Text="Добавление песен в альбом"
                           Style="{StaticResource MainInfoPanel}"/>
            </Border>

            <ScrollViewer Grid.Row="1"
                          Margin="0 10 0 0"
                          VerticalScrollBarVisibility="Auto"
                          Style="{StaticResource ScrollViewer}">
                <StackPanel Name="SongsList">
                    <Button Name="AddSongButton"/>
                </StackPanel>
            </ScrollViewer>

            <Border Grid.Row="2" Name="RenameSongBorder"
                    Style="{StaticResource NonFunctionalField22}">
                <Grid Margin="10 5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Название песни:" Style="{StaticResource SmallInfoPanel}"/>
                    <TextBox Grid.Row="1" Name="SongRenameTextBox"
                             VerticalAlignment="Center"
                             Style="{StaticResource MainIngutField}"/>

                    <Button Grid.Column="1" Grid.Row="1" Content="Изменить" 
                            Margin="10 5" Padding="10" IsEnabled="False"
                            HorizontalAlignment="Right" VerticalAlignment="Center"
                            Name="RenameSongButton" Click="RenameSongButton_Click"
                            Style="{StaticResource SimpleButton}"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Page>
