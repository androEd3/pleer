<Page x:Class="pleer.Resources.Pages.UserPages.FullWindow.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:pleer.Resources.Pages.UserPages.FullWindow"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d">

    <StackPanel Height="405"
                Orientation="Horizontal">
        <Border Padding="30 50 30 30"
                Style="{StaticResource NonFunctionalField}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="35"/>
                    <RowDefinition />
                    <RowDefinition Height="110"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="175"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Вход"
                           Style="{StaticResource BigMainInfoPanel}"/>

                <TextBlock Grid.Column="1"
                           MouseLeftButtonUp="TurnToRegistration_Click"
                           VerticalAlignment="Bottom" HorizontalAlignment="Right"
                           Style="{StaticResource FunctionalSmallInfoPanel}">
                    <Run Text="Регистрация"/>
                    <InlineUIContainer BaselineAlignment="Center">
                        <materialDesign:PackIcon Kind="ArrowRightCircle"
                                                 Width="25" Height="25"/>
                    </InlineUIContainer>
                </TextBlock>

                <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Margin="0 35 0 5">
                    <TextBlock Text="Почта" Margin="5 0"
                               Style="{StaticResource SmallInfoPanel}"/>
                    <TextBox Name="UserEmail"
                             Style="{StaticResource MainIngutField}"/>

                    <TextBlock Text="Пароль" Margin="5 20 5 0"
                               Style="{StaticResource SmallInfoPanel}"/>
                    <TextBox Name="UserPassword"
                             Style="{StaticResource MainIngutField}"/>
                </StackPanel>

                <TextBlock Name="ErrorNoticePanel" TextWrapping="Wrap"
                           Grid.Row="2" Grid.ColumnSpan="2"
                           Style="{StaticResource SmallErrorPanel}"/>
                <Button Grid.Row="2" Grid.ColumnSpan="2"
                        Content="Войти" Margin="0 60 0 10"
                        HorizontalAlignment="Center"
                        Click="LoginButton_Click"
                        Style="{StaticResource SimpleSubmitButton}"/>
            </Grid>
        </Border>

        <Button HorizontalAlignment="Right" VerticalAlignment="Top"
                Name="CloseFullWindowFrameButton" Click="CloseFullWindowFrameButton_Click"
                Margin="10 0" Style="{StaticResource BaseFunctionButton}">
            <materialDesign:PackIcon Kind="CloseCircle" Width="40" Height="40"/>
        </Button>
    </StackPanel>
</Page>
