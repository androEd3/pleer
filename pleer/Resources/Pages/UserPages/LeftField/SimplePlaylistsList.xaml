<Page x:Class="pleer.Resources.Pages.SimplePlaylistsList"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:pleer.Resources.Pages"
      mc:Ignorable="d">

    <Border Margin="5 5 5 0" Padding="5"
            Style="{StaticResource NonFunctionalField}">
    <StackPanel>
        <Grid Margin="10 0">
            <TextBlock Text="Моя медиаетка  " Style="{StaticResource SmallInfoPanel}"
                       VerticalAlignment="Center" />

            <Button Click="CreatePlaylictButton_Click" Style="{StaticResource SimpleSubmitButton}"
                    HorizontalAlignment="Right">
                <TextBlock>
                    <Run Text="Добавить"/>
                </TextBlock>
            </Button>
        </Grid>

        <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0 5 0 0">
            <StackPanel Name="PlaylistsList"/>
        </ScrollViewer>
    </StackPanel>
    </Border>
</Page>
