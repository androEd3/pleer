<Window x:Class="pleer.Resources.Windows.ArtistMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
            mc:Ignorable="d" WindowStartupLocation="CenterScreen"
            Style="{StaticResource MainWindow}" Closing="Window_Closing">

    <Grid>
        <Grid Name="MainGrid">
            <UIElement.Effect>
                <BlurEffect x:Name="WindowBlurEffect" Radius="0" KernelType="Gaussian"/>
            </UIElement.Effect>

            <Grid.RowDefinitions>
                <RowDefinition Height="75"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
                
            <StackPanel Grid.Row="0" Margin="10 0"
                        Orientation="Horizontal" VerticalAlignment="Center">
                <Grid>
                    <ToggleButton Name="MenuToggleButton"
                                  ClickMode="Press"
                                  Style="{StaticResource MenuToggleButton}">
                        <materialDesign:PackIcon Kind="Menu" Width="50" Height="50"/>
                    </ToggleButton>

                    <Popup Name="MenuPopup" 
                           PlacementTarget="{Binding ElementName=MenuToggleButton}"
                           Placement="Bottom"
                           StaysOpen="False"
                           IsOpen="{Binding IsChecked, ElementName=MenuToggleButton, Mode=TwoWay}">

                        <Border CornerRadius="5" Padding="0 5"
                                BorderThickness="1" BorderBrush="#333"
                                Style="{StaticResource NonFunctionalField2c}">
                            <StackPanel>
                                <Button Content="Войти как слушатель" 
                                        Click="LoginAsListinerButton_Click"
                                        Style="{StaticResource MenuButton}"/>
                            </StackPanel>
                        </Border>
                    </Popup>
                </Grid>
            </StackPanel>

            <StackPanel Grid.Row="0" Margin="10 0"
                        Orientation="Horizontal"
                        VerticalAlignment="Center" HorizontalAlignment="Center">

            </StackPanel>

            <StackPanel Grid.Row="0" Margin="10 0"
                        Orientation="Horizontal" 
                        VerticalAlignment="Center" HorizontalAlignment="Right">

                
            </StackPanel>

            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal"
                        Visibility="Visible" Margin="10 0">
                <TextBlock Name="ArtistName" Margin="10 0"
                           VerticalAlignment="Center"
                           Cursor="Hand" MouseLeftButtonUp="ProfileImage_Click"
                           Style="{StaticResource SongNameLowerPanel}"/>

                <Ellipse Width="45" Height="45"
                         Name="ProfilePictureEllipse" 
                         Cursor="Hand" MouseLeftButtonUp="ProfileImage_Click"
                         Visibility="Collapsed">
                    <Ellipse.Fill>
                        <ImageBrush x:Name="ProfilePictureImage"/>
                    </Ellipse.Fill>
                </Ellipse>

                <Button VerticalAlignment="Center"
                        Content="Войти" Padding="10"
                        Name="LoginButton" Click="LoginButton_Click"
                        Style="{StaticResource SimpleButton}"/>
            </StackPanel>

            <!-- Main Panel -->
            <Grid Grid.Row="1" Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="300"/>
                    <ColumnDefinition Width="0.8*"/>
                </Grid.ColumnDefinitions>

                <Border Style="{StaticResource NonFunctionalField22}">
                    <StackPanel Name="ArtistFunctionsList"
                                Margin="5 0">
                        <Button Margin="0 5" 
                                Content="Выпуски" Click="ArtistReleasesButton_Click"
                                Style="{StaticResource SimpleButtonV2}"/>

                        <Button Margin="0 5"
                                Content="Профиль исполнителя" Click="ArtistProfileButton_Click"
                                Style="{StaticResource SimpleButtonV2}"/>

                        <Button Margin="0 5"
                                Content="Статистика" Click="StatisticsButton_Click"
                                Style="{StaticResource SimpleButtonV2}"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="1" Height="85"
                        Name="SongFunctionalBar" Visibility="Collapsed"
                        Margin="5 0 0 0" VerticalAlignment="Bottom"
                        Style="{StaticResource NonFunctionalField22}">
                    <Grid VerticalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <!-- Song Info -->
                        <StackPanel Orientation="Horizontal" Margin="15 0" Name="MetadataPanel"
                                    VerticalAlignment="Center" HorizontalAlignment="Left">

                            <Border CornerRadius="5" Height="55" Width="55" Background="#333">
                                <Image Name="AlbumCover"/>
                            </Border>
                            
                            <StackPanel Grid.Column="1" Margin="10 5" Name="VisualBorder"
                                        VerticalAlignment="Bottom">
                                <Border CornerRadius="5" Height="15" Width="150"
                                        HorizontalAlignment="Left"
                                        Background="#333"/>
                                <Border CornerRadius="5" Margin="0 5"
                                        HorizontalAlignment="Left"
                                        Height="15" Width="100" Background="#333"/>
                            </StackPanel>
                           
                            <StackPanel Margin="10 5">
                                <TextBlock Name="SongName" Style="{StaticResource SongNameLowerPanel}"/>
                                <TextBlock Name="SingerName" Style="{StaticResource ArtistNameLowerPanel}"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Song Main Functions -->
                        <Grid Grid.Column="1"
                              VerticalAlignment="Center">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="30"/>
                                    <ColumnDefinition Width="35"/>
                                    <ColumnDefinition Width="30"/>
                                </Grid.ColumnDefinitions>

                                <Button Height="30" Width="30"
                                        Click="PreviousMedia_Click" Style="{StaticResource BaseFunctionButton}">
                                    <materialDesign:PackIcon Kind="SkipPrevious" Width="30" Height="30"/>
                                </Button>
                                
                                <Button Height="35" Width="35" Grid.Column="1"
                                        Click="PlayMedia_Click" Style="{StaticResource BaseFunctionButton}">
                                    <materialDesign:PackIcon Name="PlayIcon" Kind="Play" Width="35" Height="35"/>
                                </Button>
                            </Grid>

                            <Grid VerticalAlignment="Center" Grid.Row="1"
                                  Margin="0 5 0 0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Name="currentMediaTime" Style="{StaticResource SmallInfoPanel}" 
                                           Grid.Column="0" VerticalAlignment="Center" Text="--:--"/>

                                <Slider x:Name="progressSlider" VerticalAlignment="Center"
                                        Minimum="0" Margin="10 0"
                                        Maximum="{Binding Duration.TotalSeconds}"
                                        Value="{Binding CurrentPosition.TotalSeconds, Mode=OneWay}"
                                        IsMoveToPointEnabled="True"
                                        ValueChanged="ProgressSlider_ValueChanged"
                                        PreviewMouseLeftButtonDown="ProgressSlider_PreviewMouseLeftButtonDown"
                                        PreviewMouseLeftButtonUp="ProgressSlider_PreviewMouseLeftButtonUp"
                                        Grid.Column="1"/>

                                <TextBlock Name="totalMediaTime" Style="{StaticResource SmallInfoPanel}" 
                           Grid.Column="2" VerticalAlignment="Center" Text="--:--"/>
                            </Grid>
                        </Grid>

                        <!-- Song Operations -->
                        <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="15 10"
                                    VerticalAlignment="Center" HorizontalAlignment="Right">
                            <Button Click="MutePlayerButton_Click" 
                                    Style="{StaticResource BaseFunctionButton}">
                                <materialDesign:PackIcon Name="VolumeIcon" Kind="VolumeHigh" 
                                                         Width="30" Height="30"/>
                            </Button>

                            <Slider x:Name="VolumeSlider"
                                    Minimum="0" Maximum="0.1" Value="0.05"
                                    IsMoveToPointEnabled="True"
                                    ValueChanged="VolumeSlider_ValueChanged"
                                    PreviewMouseLeftButtonDown="VolumeSlider_PreviewMouseLeftButtonDown"
                                    PreviewMouseLeftButtonUp="VolumeSlider_PreviewMouseLeftButtonUp"
                                    Width="100" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <Frame Grid.Column="1"
                       Name="OperationField" NavigationUIVisibility="Hidden"
                       Navigated="OperationField_Navigated"/>
            </Grid>
        </Grid>

        <Frame 
               NavigationUIVisibility="Hidden"
               VerticalAlignment="Center" HorizontalAlignment="Center"
               Name="FullWindow"/>
    </Grid>
</Window>
