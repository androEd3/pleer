<Window x:Class="pleer.Resources.Windows.ListenerMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pleer.Resources.Windows"
            xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
            mc:Ignorable="d" WindowStartupLocation="CenterScreen"
            Style="{StaticResource MainWindow}" Closing="Window_Closing">

    <Grid>
        <Grid Name="MainGrid">
            <UIElement.Effect>
                <BlurEffect x:Name="WindowBlurEffect" Radius="0" KernelType="Gaussian"/>
            </UIElement.Effect>

            <Grid Margin="2.5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="75"/>
                    <RowDefinition/>
                    <RowDefinition Height="85"/>
                </Grid.RowDefinitions>

                <!-- Main Panel -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition MinWidth="250"/>
                        <ColumnDefinition MinWidth="395"/>
                        <ColumnDefinition MinWidth="250"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Horizontal" Margin="10 0"
                                VerticalAlignment="Center">
                        <Grid>
                            <ToggleButton Name="MenuToggleButton"
                                          ClickMode="Press"
                                          Style="{StaticResource MenuToggleButton}">
                                <materialDesign:PackIcon Kind="Menu" Width="50" Height="50"/>
                            </ToggleButton>

                            <Popup Name="MenuPopup"
                                   PlacementTarget="{Binding ElementName=MenuToggleButton}"
                                   Placement="Bottom"
                                   StaysOpen="False"
                                   IsOpen="{Binding IsChecked, ElementName=MenuToggleButton, Mode=TwoWay}">

                                <Border CornerRadius="5" Padding="0 5"
                                        BorderThickness="1" BorderBrush="#333"
                                        Style="{StaticResource NonFunctionalField2c}">
                                    <StackPanel>
                                        <Button Content="Войти как исполнитель" 
                                                Click="LoginAsArtistButton_Click"
                                                Style="{StaticResource MenuButon}"/>
                                    </StackPanel>
                                </Border>
                            </Popup>
                        </Grid>

                        <Button Click="BackPageButton_Click" Name="BackButton"
                                Margin="15 0 0 0"
                                Style="{StaticResource BaseFunctionButton}">
                            <materialDesign:PackIcon Kind="ChevronLeft"
                                                     Width="50" Height="50"/>
                        </Button>
                        <Button Click="ForwardPageButton_Click" Name="ForwardButton"
                                Style="{StaticResource BaseFunctionButton}">
                            <materialDesign:PackIcon Kind="ChevronRight" 
                                                     Width="50" Height="50"/>
                        </Button>
                    </StackPanel>

                    <Grid Grid.Column="1" Margin="10 0"
                          VerticalAlignment="Center" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button Click="HomeButton_Click" Margin="5 0"
                                Style="{StaticResource BaseFunctionButton}">
                            <materialDesign:PackIcon Kind="HomeCircle" 
                                                     Width="50" Height="50"/>
                        </Button>
                        
                        <TextBox Grid.Column="1"
                                 Name="SearchBar"
                                 TextChanged="SearchBar_TextChanged"
                                 Style="{StaticResource MainIngutField}"/>
                    </Grid>

                    <StackPanel Grid.Column="2"
                                Orientation="Horizontal" Margin="10 0"
                                VerticalAlignment="Center" HorizontalAlignment="Right">
                        <TextBlock Name="ListenerName" Margin="10 0"
                                   VerticalAlignment="Center"
                                   Cursor="Hand" MouseLeftButtonUp="ProfileImage_Click"
                                   Style="{StaticResource SongNameLowerPanel}"/>
                        
                        <Ellipse HorizontalAlignment="Right" Visibility="Collapsed"
                                 Width="45" Height="45"
                                 Name="ProfilePictureEllipse" 
                                 Cursor="Hand" MouseLeftButtonUp="ProfileImage_Click">
                            <Ellipse.Fill>
                                <ImageBrush x:Name="ProfilePictureImage"/>
                            </Ellipse.Fill>
                        </Ellipse>

                        <Button HorizontalAlignment="Right" VerticalAlignment="Center"
                                Content="Войти" Name="LoginButton"
                                Click="LoginButton_Click"
                                Style="{StaticResource SimpleButton}"/>
                    </StackPanel>
                </Grid>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition MinWidth="250" MaxWidth="400"/>
                        <ColumnDefinition MinWidth="375" Width="1.75*"/>
                        <ColumnDefinition MinWidth="250" MaxWidth="400" Width="1.1 *"/>
                    </Grid.ColumnDefinitions>

                    <Frame Name="MediaLibrary" NavigationUIVisibility="Hidden"/>

                    <Frame Grid.Column="1"
                           Name="CenterField" NavigationUIVisibility="Hidden"
                           Navigated="CenterField_Navigated"/>
                </Grid>

                <Border Grid.Row="2"
                        Margin="5"
                        Style="{StaticResource NonFunctionalField22}">
                    <Grid VerticalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <!-- Song Info -->
                        <StackPanel Orientation="Horizontal" Margin="15 0"
                                    VerticalAlignment="Center" HorizontalAlignment="Left">
                            <Image Name="AlbumCover" Height="55" Width="55"
                                   Style="{StaticResource AlbumCoverLowerPanel}"/>

                            <StackPanel Margin="5">
                                <TextBlock Name="SongName" Style="{StaticResource SongNameLowerPanel}"/>
                                <TextBlock Name="SingerName" Style="{StaticResource ArtistNameLowerPanel}"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Song Main Functions -->
                        <Grid Grid.Column="1"
                              VerticalAlignment="Center">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center"
                                        Orientation="Horizontal" Grid.Row="0">
                                <Button Height="30" Width="30"
                                        Click="PreviousMedia_Click" Style="{StaticResource BaseFunctionButton}">
                                    <materialDesign:PackIcon Kind="SkipPrevious" Width="30" Height="30"/>
                                </Button>
                                <Button Height="35" Width="35" Margin="10 0"
                                        Click="PlayMedia_Click" Style="{StaticResource BaseFunctionButtonWithBorder}">
                                    <materialDesign:PackIcon Name="PlayIcon" Kind="Play" Width="35" Height="35"/>
                                </Button>

                                <Button Height="30" Width="30"
                                        Click="NextMedia_Click" Style="{StaticResource BaseFunctionButton}">
                                    <materialDesign:PackIcon Kind="SkipNext" Width="30" Height="30"/>
                                </Button>
                            </StackPanel>

                            <Grid VerticalAlignment="Center" Grid.Row="1"
                                  Margin="0 5 0 0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Name="currentMediaTime" Style="{StaticResource SmallInfoPanel}" 
                                           Grid.Column="0" VerticalAlignment="Center" Text="--:--"/>

                                <Slider x:Name="progressSlider" VerticalAlignment="Center"
                                        Minimum="0" Margin="10 0"
                                        Maximum="{Binding Duration.TotalSeconds}"
                                        Value="{Binding CurrentPosition.TotalSeconds, Mode=OneWay}"
                                        IsMoveToPointEnabled="True"
                                        ValueChanged="ProgressSlider_ValueChanged"
                                        PreviewMouseLeftButtonDown="ProgressSlider_PreviewMouseLeftButtonDown"
                                        PreviewMouseLeftButtonUp="ProgressSlider_PreviewMouseLeftButtonUp"
                                        Grid.Column="1"/>

                                <TextBlock Name="totalMediaTime" Style="{StaticResource SmallInfoPanel}" 
                                           Grid.Column="2" VerticalAlignment="Center" Text="--:--"/>
                            </Grid>
                        </Grid>
                        
                        <!-- Song Operations -->
                        <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="15 10"
                                    VerticalAlignment="Center" HorizontalAlignment="Right">
                            <Button Click="MutePlayerButton_Click" 
                                    Style="{StaticResource BaseFunctionButton}">
                                <materialDesign:PackIcon Name="VolumeIcon" Kind="VolumeHigh" 
                                                         Width="30" Height="30"/>
                            </Button>

                            <Slider x:Name="VolumeSlider"
                                    Minimum="0" Maximum="0.1"
                                    Value="0.05"
                                    IsMoveToPointEnabled="True"
                                    ValueChanged="VolumeSlider_ValueChanged"
                                    PreviewMouseLeftButtonDown="VolumeSlider_PreviewMouseLeftButtonDown"
                                    PreviewMouseLeftButtonUp="VolumeSlider_PreviewMouseLeftButtonUp"
                                    Width="100" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Grid>

        <Frame Grid.RowSpan="3"
               NavigationUIVisibility="Hidden"
               VerticalAlignment="Center" HorizontalAlignment="Center"
               Name="FullWindow"/>
    </Grid>
</Window>
