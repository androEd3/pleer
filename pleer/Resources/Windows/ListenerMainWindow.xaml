<Window x:Class="pleer.Resources.Windows.ListenerMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pleer.Resources.Windows"
            xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
            mc:Ignorable="d"
            Height="700" Width="1150"
            MinWidth="917.5" MinHeight="550"
            WindowStartupLocation="CenterScreen"
            Background="#222">

    <Grid>
        <Frame Grid.RowSpan="3"
               NavigationUIVisibility="Hidden"
               VerticalAlignment="Center" HorizontalAlignment="Center"
               Name="FullWindow"/>

        <Grid Name="MainGrid">
            <UIElement.Effect>
                <BlurEffect x:Name="WindowBlurEffect" Radius="0" KernelType="Gaussian"/>
            </UIElement.Effect>

            <Grid Margin="2.5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="75"/>
                    <RowDefinition/>
                    <RowDefinition Height="85"/>
                </Grid.RowDefinitions>

                <!-- Main Panel -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition MinWidth="250"/>
                        <ColumnDefinition MinWidth="395"/>
                        <ColumnDefinition MinWidth="250"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Horizontal" Margin="10 0"
                                VerticalAlignment="Center">
                        <Button Content="Войти как исполнитель" Click="LoginAsArtistButton_Click"
                                Style="{StaticResource SimpleSubmitButton}"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="10 0"
                                Orientation="Horizontal"
                                VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBox Name="SearchBar" Width="300" Style="{StaticResource MainIngutField}"/>

                        <Button Content="Поиск" Click="SearchButton_Click"
                                Margin="10 0 0 0" Style="{StaticResource SimpleSubmitButton}"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2"
                                Orientation="Horizontal" Margin="10 0"
                                VerticalAlignment="Center" HorizontalAlignment="Right">
                        <Button HorizontalAlignment="Right" VerticalAlignment="Top"
                                Content="Войти" Name="LoginButton"
                                Click="LoginButton_Click"
                                Style="{StaticResource SimpleSubmitButton}"/>
                    </StackPanel>
                </Grid>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition MinWidth="250" MaxWidth="400"/>
                        <ColumnDefinition MinWidth="375" Width="1.75*"/>
                        <ColumnDefinition MinWidth="250" MaxWidth="400" Width="1.25*"/>
                    </Grid.ColumnDefinitions>

                    <Frame Name="PlaylistList"/>
                    <TextBlock Name="NoticePanel" TextWrapping="Wrap" Visibility="Collapsed"
                               Text="Войдите чтобы открыть больше возможностей" 
                               VerticalAlignment="Center" HorizontalAlignment="Center"
                               Style="{StaticResource SmallMainInfoPanel}"/>

                    <ScrollViewer Grid.Column="1" VerticalAlignment="Top"
                                  VerticalScrollBarVisibility="Auto"
                                  Style="{StaticResource SimpleDarkScrollViewer}">
                        <Frame Name="CenterField" NavigationUIVisibility="Hidden"/>
                    </ScrollViewer>
                </Grid>

                <Border Grid.Row="2"
                        Margin="5"
                        Style="{StaticResource NonFunctionalField}">
                    <Grid VerticalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <!-- Song Info -->
                        <StackPanel Orientation="Horizontal" Margin="15 0"
                                    VerticalAlignment="Center" HorizontalAlignment="Left">
                            <Image Name="AlbumCover" Style="{StaticResource AlbumCoverLowerPanel}"/>

                            <StackPanel Margin="5">
                                <TextBlock Name="SongName" Style="{StaticResource SongNameLowerPanel}"/>
                                <TextBlock Name="SingerName" Style="{StaticResource ArtistNameLowerPanel}"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Song Main Functions -->
                        <Grid Grid.Column="1"
                              VerticalAlignment="Center">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center"
                                        Orientation="Horizontal" Grid.Row="0">
                                <Button Height="30" Width="30"
                                        Click="PreviousMedia_Click" Style="{StaticResource BaseFunctionButton}">
                                    <materialDesign:PackIcon Kind="SkipPrevious" Width="30" Height="30"/>
                                </Button>
                                <Button Height="35" Width="35" Margin="10 0"
                                        Click="PlayMedia_Click" Style="{StaticResource BaseFunctionButtonWithBorder}">
                                    <materialDesign:PackIcon Name="PlayIcon" Kind="Play" Width="35" Height="35"/>
                                </Button>

                                <Button Height="30" Width="30"
                                        Click="NextMedia_Click" Style="{StaticResource BaseFunctionButton}">
                                    <materialDesign:PackIcon Kind="SkipNext" Width="30" Height="30"/>
                                </Button>
                            </StackPanel>

                            <Grid VerticalAlignment="Center" Grid.Row="1"
                                  Margin="0 5 0 0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Name="currentMediaTime" Style="{StaticResource SmallInfoPanel}" 
                                           Grid.Column="0" VerticalAlignment="Center" Text="--:--"/>

                                <Slider x:Name="progressSlider" VerticalAlignment="Center"
                                        Minimum="0" Margin="10 0"
                                        Maximum="{Binding Duration.TotalSeconds}"
                                        Value="{Binding CurrentPosition.TotalSeconds, Mode=OneWay}"
                                        IsMoveToPointEnabled="True"
                                        ValueChanged="ProgressSlider_ValueChanged"
                                        PreviewMouseLeftButtonDown="ProgressSlider_PreviewMouseLeftButtonDown"
                                        PreviewMouseLeftButtonUp="ProgressSlider_PreviewMouseLeftButtonUp"
                                        Grid.Column="1"/>

                                <TextBlock Name="totalMediaTime" Style="{StaticResource SmallInfoPanel}" 
                                           Grid.Column="2" VerticalAlignment="Center" Text="--:--"/>
                            </Grid>
                        </Grid>
                        
                        <!-- Song Operations -->
                        <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="15 10"
                                    VerticalAlignment="Center" HorizontalAlignment="Right">
                            <Button Click="MutePlayerButton_Click" 
                                    Style="{StaticResource BaseFunctionButton}">
                                <materialDesign:PackIcon Name="VolumeIcon" Kind="VolumeHigh" Width="30" Height="30"/>
                            </Button>

                            <Slider x:Name="VolumeSlider"
                                    Minimum="0" Maximum="0.1"
                                    Value="0.05"
                                    IsMoveToPointEnabled="True"
                                    ValueChanged="VolumeSlider_ValueChanged"
                                    PreviewMouseLeftButtonDown="VolumeSlider_PreviewMouseLeftButtonDown"
                                    PreviewMouseLeftButtonUp="VolumeSlider_PreviewMouseLeftButtonUp"
                                    Width="100" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>
