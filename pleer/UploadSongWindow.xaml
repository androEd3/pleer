<Window x:Class="pleer.UploadSongWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pleer"
        mc:Ignorable="d"
        Height="500" Width="600" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    
    <StackPanel VerticalAlignment="Center" Margin="20 20 55 20">
        <TextBlock Text="Загрузка песни на площадку" Style="{StaticResource BigMainInfoPanel}"/>

        <StackPanel VerticalAlignment="Center" Margin="0 15">
            <TextBlock Text="Название песни:" Style="{StaticResource SmallMainInfoPanel}"/>
            <TextBox Name="SongName" Margin="0 0 0 5" Style="{StaticResource MainIngutField}"/>

            <TextBlock Text="Исполнитель:" Style="{StaticResource SmallMainInfoPanel}"/>
            <TextBox Name="CreatorName" Margin="0 0 0 5" Style="{StaticResource MainIngutField}"/>

            <TextBlock Text="Фото альбома:" Style="{StaticResource SmallMainInfoPanel}"/>
            <StackPanel Orientation="Horizontal" Margin="0 5 0 5">
                <Button Content="Выбрать файл" Click="SelectAlbumCoverButton_Click"
                        Style="{StaticResource SimpleSubmitButton}"/>
                
                <TextBlock Name="AlbumCoverPath" Style="{StaticResource SmallInfoPanel}" VerticalAlignment="Center"
                    Margin="5 0" TextTrimming="CharacterEllipsis" TextWrapping="NoWrap">
                    <TextBlock.ToolTip>
                        <ToolTip DataContext="{Binding Path=PlacementTarget, RelativeSource={RelativeSource Self}}">
                            <TextBlock Text="{Binding Text}" TextWrapping="Wrap" MaxWidth="400"/>
                        </ToolTip>
                    </TextBlock.ToolTip>
                </TextBlock>
            </StackPanel>

            <TextBlock Text="Файл песни:" Style="{StaticResource SmallMainInfoPanel}"/>
            <StackPanel Orientation="Horizontal" Margin="0 5 0 0">
                <Button Content="Выбрать песню" Click="SelectSongFileButton_Click"
                        Style="{StaticResource SimpleSubmitButton}"/>
                
                <TextBlock Name="SongPath" Style="{StaticResource SmallInfoPanel}" VerticalAlignment="Center"
                    Margin="5 0" TextTrimming="CharacterEllipsis" TextWrapping="NoWrap">
                    <TextBlock.ToolTip>
                        <ToolTip DataContext="{Binding Path=PlacementTarget, RelativeSource={RelativeSource Self}}">
                            <TextBlock Text="{Binding Text}" TextWrapping="Wrap" MaxWidth="400"/>
                        </ToolTip>
                    </TextBlock.ToolTip>
                </TextBlock>
            </StackPanel>
        </StackPanel>

        <Grid Margin="0 20 0 0">
            <Button HorizontalAlignment="Left" Style="{StaticResource SimpleSubmitButton}"
                    Content="Вернуться" Click="ReturnButton_Click"/>
            <Button HorizontalAlignment="Right" Style="{StaticResource SimpleSubmitButton}"
                    Content="Загрузить песню" Click="UploadSongButton_Click"/>
        </Grid>
    </StackPanel>
</Window>
